<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/image_view_flag"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        android:elevation="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/flag_afghanistan" />

    <TextView
        android:id="@+id/meal_name_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingStart="8dp"
        android:maxLines="1"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:textSize="14sp"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_view_flag"
        app:layout_constraintTop_toTopOf="@+id/image_view_flag"
        tools:text="Afghanistan" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100 EGP"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="14sp"
        android:id="@+id/price_search_tv"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintBottom_toBottomOf="@+id/kitchen_name_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/kitchen_name_tv"
        app:layout_constraintTop_toBottomOf="@+id/meal_name_tv" />


    <TextView
        android:id="@+id/kitchen_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="8dp"
        android:paddingStart="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/image_view_flag"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/meal_name_tv"

        app:layout_constraintTop_toBottomOf="@+id/meal_name_tv"
        tools:text="Afghanistan" />


</androidx.constraintlayout.widget.ConstraintLayout>